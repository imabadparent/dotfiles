#! /bin/zsh

##########################################################
## Personalisation - Prompt, Themes, Plugins, etc.

PROMPT='%B[%F{green}%~%f%b$(git_super_status)]%# '
#PROMPT='| %F{green}%~%f> '
#PROMPT='%~|%n%f> '

# Use emacs keybinds and let the delete work
bindkey -e
bindkey "^[[3~"  delete-char

# Set zsh options
setopt autopushd
setopt pushdminus
setopt pushdsilent
setopt pushdtohome
setopt autocd

##########################################################
## Autogenerated Config

# The following lines were added by compinstall
zstyle ':completion:*' completer _complete _ignored
zstyle :compinstall filename '/home/ligionbob/.zshrc'

autoload -Uz compinit
compinit -D
# End of lines added by compinstall
# Lines configured by zsh-newuser-install
HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000
# End of lines configured by zsh-newuser-install
